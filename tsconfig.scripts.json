{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "rootDir": ".", // Allow compilation of files outside src (needed for scripts directory)
    "esModuleInterop": true,
    "jsx": "react",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/services/**/*", "src/utils/**/*", "src/lib/**/*", "scripts/**/*.ts*"],
  "exclude": ["src/**/*.test.ts", "src/**/*.spec.ts", "node_modules"]
}