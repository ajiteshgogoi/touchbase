# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# AI Integration
VITE_GROQ_API_KEY=your_groq_api_key

# Payment Integration
VITE_PAYPAL_CLIENT_ID=your_paypal_client_id
VITE_PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Premium Plan Configuration
VITE_PREMIUM_PLAN_ID=your_paypal_subscription_plan_id
VITE_PREMIUM_PLAN_PRICE=3

# Application Configuration
VITE_APP_NAME=TouchBase
VITE_APP_URL=http://localhost:3000
VITE_CONTACT_LIMIT_FREE=15
VITE_CONTACT_LIMIT_PREMIUM=unlimited
VITE_ADMIN_USER_ID=your_supabase_user_id   # Your Supabase user ID to identify admin

# Google OAuth Configuration
VITE_GOOGLE_CLIENT_ID=your_google_client_id            # From Google Cloud Console OAuth 2.0 Client ID
VITE_GOOGLE_CLIENT_SECRET=your_google_client_secret    # From Google Cloud Console OAuth 2.0 Client Secret
VITE_OAUTH_WORKER_URL=https://your-worker-name.workers.dev     # Custom Cloudflare worker URL for OAuth
VITE_WORKER_API_KEY=your_generated_api_key                     # Generated API key for worker authentication

# PWA Configuration
VITE_PWA_NAME=TouchBase
VITE_PWA_SHORT_NAME=TouchBase
VITE_PWA_THEME_COLOR=#0EA5E9
VITE_PWA_BACKGROUND_COLOR=#F9FAFB

# Notification Configuration
VITE_VAPID_PUBLIC_KEY=your_vapid_public_key
VITE_NOTIFICATION_SERVER_URL=your_notification_server_url

# Analytics (Optional)
VITE_ANALYTICS_ID=your_analytics_id

# Error Tracking (Optional)
VITE_SENTRY_DSN=your_sentry_dsn

# Feature Flags
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_ANALYTICS=false

# API Rate Limits
VITE_API_RATE_LIMIT=100
VITE_API_RATE_WINDOW=60000

# Cache Configuration
VITE_CACHE_TTL=300000
VITE_CACHE_MAX_ITEMS=1000

# Development Only
VITE_DEV_SKIP_AUTH=false
VITE_DEV_MOCK_PREMIUM=false
VITE_DEV_API_DELAY=0