{
  "compilerOptions": {
    /* Build Configuration */
    "composite": true,
    "skipLibCheck": true,

    /* Module System */
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,

    /* Types */
    "types": ["node"]
  },

  /* Source Files */
  "include": [
    "vite.config.ts",
    "scripts/**/*.ts",
    "scripts/**/*.js"
  ]
}
